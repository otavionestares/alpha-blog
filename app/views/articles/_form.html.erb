<ul>
  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
  <% end %>
  </ul>
  
    <%= form_for @article do |f| %>
      <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %><br>
      </p>      
     
      <p>
          <%= f.label :description %><br>
          <%= f.text_area :description %><br>
      </p>
      <%= f.submit%>
    
    <% end %>
    
    <%= link_to 'Back to article list', articles_path%>